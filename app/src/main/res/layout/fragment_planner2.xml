            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_giovedi"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_venerdi"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_sabato"/>

        <com.google.android.material.tabs.TabItem
